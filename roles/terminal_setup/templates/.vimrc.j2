" Show line numbers
set number

" YAML-specific settings
autocmd FileType yaml setlocal shiftwidth=2 tabstop=2 softtabstop=2 expandtab

" Search settings
set incsearch        " Incremental search
set hlsearch         " Highlight search matches

" --- Persistent Undo ---
set undofile
set undodir=~/.vim/undo
if !isdirectory($HOME . "/.vim/undo")
  call mkdir($HOME . "/.vim/undo", "p")
endif

" Global indentation settings (good for YAML and general coding)
set expandtab
set shiftwidth=2
set softtabstop=2
set tabstop=2

" Indentation behavior
set autoindent
set smartindent

" Highlight trailing whitespace (great for YAML strictness)
match ErrorMsg '\s\+$'

" Normal mode outdent
nnoremap <S-Tab> <<

" Visual mode indent/unindent
vnoremap <Tab> >gv
vnoremap <S-Tab> <gv

" Insert mode outdent
inoremap <S-Tab> <C-d>

